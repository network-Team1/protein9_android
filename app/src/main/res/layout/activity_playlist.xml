<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#805847"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textColor="#805847"
            android:textSize="25dp"
            android:textStyle="bold"
            android:background="#FFE68F"
            android:text=" ⬅️\t\t 노래 신청 " />

        <TextView
            android:id="@+id/playing_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:text="Now Playing..."
            android:textColor="#FFE68F"
            android:textSize="29dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/music_back1"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:paddingLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/music" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="음악의 신\nSeventeen"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

    <ListView
        android:id="@+id/playlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/music_back2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:background="@drawable/music_back3"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

<!--        <TextView-->
<!--            android:id="@+id/search_bar"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textColor="@color/black"-->
<!--            android:layout_marginTop="20dp"-->
<!--            android:layout_marginHorizontal="40dp"-->
<!--            android:paddingLeft="30dp"-->
<!--            android:padding="15dp"-->
<!--            android:textSize="20dp"-->
<!--            android:background="@drawable/music_back1"-->
<!--            android:text="\t🔎\t\t 노래 검색하기\t" />-->


        <TextView
            android:id="@+id/song_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/music_back4"
            android:padding="5dp"
            android:paddingLeft="30dp"
            android:text="\t\t✨\t\t노래 신청하기"
            android:textColor="#FFE68F"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/music_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="40dp"
            android:paddingLeft="30dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="@drawable/music_back1"
            android:hint="\t\t노래 제목 (Song Title)" />

        <TextView
            android:id="@+id/music_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="40dp"
            android:paddingLeft="30dp"
            android:padding="10dp"
            android:textSize="20dp"
            android:background="@drawable/music_back1"
            android:hint="\t\t가수 (Artisit)" />

        <Button
            android:id="@+id/button_go"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="100dp"
            android:layout_marginVertical="10dp"
            android:textStyle="bold"
            android:background="@drawable/music_back2"
            android:text="전송하기" />
    </LinearLayout>

</LinearLayout>