<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--배경색-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/choco"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <!--로고-->
    <ImageView
        android:id="@+id/main_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>
    <!--프로필-->
    <LinearLayout
        android:id="@+id/main_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/corner_view"
        app:layout_constraintTop_toBottomOf="@id/main_logo_iv"
        app:layout_constraintStart_toStartOf="@id/main_attend_btn"
        app:layout_constraintEnd_toEndOf="@id/main_log_btn"
        app:layout_constraintBottom_toTopOf="@id/main_listen"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"

    </LinearLayout>

    <!--신청곡-->
    <LinearLayout
        android:id="@+id/main_listen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/corner_view"
        app:layout_constraintTop_toBottomOf="@id/main_profile"
        app:layout_constraintStart_toStartOf="@id/main_attend_btn"
        app:layout_constraintEnd_toEndOf="@id/main_log_btn"
        app:layout_constraintBottom_toTopOf="@id/main_attend_btn">

    </LinearLayout>

    <!--버튼인데 사이즈 맞추느라 레이아웃 이용..-->
    <LinearLayout
        android:id="@+id/main_attend_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_listen"
        app:layout_constraintBottom_toTopOf="@id/main_chat_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_use_btn"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/main_attend_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/attend"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_attend_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="출석체크"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_use_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_listen"
        app:layout_constraintStart_toEndOf="@id/main_attend_btn"
        app:layout_constraintEnd_toStartOf="@id/main_log_btn"
        app:layout_constraintBottom_toTopOf="@id/main_inbody_btn" >
        <ImageView
            android:id="@+id/main_use_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/listen"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_use_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="기구현황"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_log_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_listen"
        app:layout_constraintBottom_toTopOf="@id/main_goal_btn"
        app:layout_constraintStart_toEndOf="@id/main_use_btn"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/main_log_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/log"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_log_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="운동기록"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_chat_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_attend_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_inbody_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="20dp">
        <ImageView
            android:id="@+id/main_chat_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/chat"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_chat_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="채팅하기"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_inbody_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@id/main_chat_btn"
        app:layout_constraintTop_toBottomOf="@id/main_use_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/main_goal_btn">
        <ImageView
            android:id="@+id/main_inbody_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/inbody"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_inbody_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="인바디 확인"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_goal_btn"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/corner_view"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/main_log_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/main_inbody_btn"
        android:layout_marginRight="20dp">
        <ImageView
            android:id="@+id/main_goal_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/goal"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/main_goal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="운동목표"
            android:textColor="@color/deep_choco"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!--광고-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY" />
</androidx.constraintlayout.widget.ConstraintLayout>

